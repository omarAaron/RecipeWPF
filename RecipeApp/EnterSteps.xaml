<Window x:Class="RecipeApp.EnterSteps"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeApp"
        mc:Ignorable="d"
        Title="Enter Steps Description" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">

            <Label x:Name="lblvalue" Target="{Binding ElementName=txtDescription}" />
            <TextBox Name="Description" />


            <Button Content="Enter" Click="SubmitDescription"/>
        </StackPanel>
    </Grid>
</Window>
