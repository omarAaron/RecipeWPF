<Window x:Class="RecipeApp.EnterIngredients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeApp"
        mc:Ignorable="d"
        Title="Enter Ingredients" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Enter Ingredient Name" Target="{Binding ElementName=txtName}" />
            <TextBox Name="Name"/>

            <Label Content="Enter Ingredient Quantity" Target="{Binding ElementName=txtQuantity}" />
            <TextBox Name="Quantity"/>

            <Label Content="Enter Ingredient Unit" Target="{Binding ElementName=txtUnit}" />
            <TextBox Name="Unit"/>

            <Label Content="Enter Ingredient Calories" Target="{Binding ElementName=txtCalories}" />
            <TextBox Name="Calories"/>

            <Label Content="Enter Ingredient Food Group" Target="{Binding ElementName=txtFG}" />
            <TextBox Name="FG"/>


            <Button Content="Enter" Width="148" Height="40" Click="SubmitIngredients"/>
        
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,299,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="2"/>
        </StackPanel>
    </Grid>
</Window>
